@model BTI_A1.Controllers.FollowUpBaseWithSuggestionAndImage

@{
    ViewBag.Title = "Remove Follow Up";
}

<h2>
    @ViewBag.Title
</h2>
<h4>For Suggestion Title: "@Html.DisplayFor(model => model.Suggestion.Title)"</h4>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Timestamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Timestamp)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <pre class="col-md-3"> @Html.Raw(Model.Description)</pre>
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
